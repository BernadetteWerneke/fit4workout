<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/beginner_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#020202"
            android:fontFamily="@font/krona_one"
            android:text="beginner"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/advanced_button"
            app:layout_constraintEnd_toEndOf="@+id/advanced_button"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/advanced_button" />

        <Button
            android:id="@+id/advanced_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="288dp"
            android:backgroundTint="#020202"
            android:fontFamily="@font/krona_one"
            android:text="advanced"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/xtrem_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="#020202"
            android:fontFamily="@font/krona_one"
            android:text="xtrem"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/advanced_button"
            app:layout_constraintStart_toStartOf="@+id/advanced_button"
            app:layout_constraintTop_toBottomOf="@+id/advanced_button"
            app:strokeColor="@color/black"
            app:strokeWidth="3dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>